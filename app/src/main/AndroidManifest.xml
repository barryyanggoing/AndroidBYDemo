<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.barryyang.barryyangdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:taskAffinity="com.barryyang.barryyangdemo.task1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity
            android:name=".activity.TargetActivity"
            android:configChanges="orientation|screenSize" />

        <activity android:name=".activity.TestActivity" />


        <activity android:name=".activity.IntentFilterActivity">

            <intent-filter>
                <action android:name="com.barryyang.barryyangdemo.IntentFilter" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.barryyang.barryyangdemo.IntentFilter.category" />

                <data android:mimeType="text/plain" />
            </intent-filter>

        </activity>
        <activity android:name=".service.TargetServiceActivity" />
        <activity android:name=".activity.CustomActivity" />
        <activity
            android:name=".bitmap.BitmapActivity"
            android:configChanges="screenSize|orientation"
            android:screenOrientation="portrait"/>

        <service
            android:name=".service.LocalService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.barryyang.barryyangdemo.local" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        <service android:name=".service.MyIntentService" />
    </application>

</manifest>