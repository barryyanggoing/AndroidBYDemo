<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_image"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_200"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginLeft="@dimen/dimen_20"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="111111"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_20"
        app:layout_constraintBottom_toTopOf="@id/tv_2"
        app:layout_constraintLeft_toRightOf="@id/tv_image"
        app:layout_constraintTop_toTopOf="@+id/tv_image" />

    <TextView
        android:id="@+id/tv_2"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="@dimen/dimen_50"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:visibility="visible"
        android:text="222222"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_20"
        app:layout_constraintBottom_toBottomOf="@id/tv_image"
        app:layout_constraintLeft_toLeftOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_1" />

</androidx.constraintlayout.widget.ConstraintLayout>