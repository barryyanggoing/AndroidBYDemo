            android:text="Glide测试DEMO" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Architecture Components"
            android:textColor="#fff"
            android:textSize="@dimen/dimen_18" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpComponents"
            android:text="Components测试DEMO" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Scoped Storage"
            android:textColor="#fff"
            android:textSize="@dimen/dimen_18" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpStorage"
            android:text="Scoped Storage测试DEMO" />
