            android:textColor="#fff"
            android:textSize="@dimen/dimen_18" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpBitmap"
            android:text="Bitmap测试DEMO" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
