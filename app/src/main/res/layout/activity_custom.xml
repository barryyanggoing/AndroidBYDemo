<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.barryyang.barryyangdemo.view.CustomView
        android:id="@+id/custom_view"
        android:layout_width="@dimen/dimen_150"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.barryyang.barryyangdemo.view.CustomGroupView
        android:id="@+id/custom_group_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/custom_view">

        <Button
            android:layout_width="100dp"
            android:layout_height="@dimen/dimen_100"
            android:background="@color/colorAccent"
            android:text="btaaan" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="btnaaa" />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="btnaaaa" />

    </com.barryyang.barryyangdemo.view.CustomGroupView>

    <com.barryyang.barryyangdemo.view.ClockView
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_group_view" />

</androidx.constraintlayout.widget.ConstraintLayout>