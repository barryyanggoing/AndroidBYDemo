<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bitmap_m"
                android:layout_width="@dimen/dimen_300"
                android:layout_height="@dimen/dimen_200"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_m_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:textSize="@dimen/dimen_18" />

            <ImageView
                android:id="@+id/iv_bitmap_h"
                android:layout_width="@dimen/dimen_300"
                android:layout_height="@dimen/dimen_200"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_h_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:textSize="@dimen/dimen_18" />

            <ImageView
                android:id="@+id/iv_bitmap_xh"
                android:layout_width="@dimen/dimen_300"
                android:layout_height="@dimen/dimen_200"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_xh_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:textSize="@dimen/dimen_18" />

            <ImageView
                android:id="@+id/iv_bitmap_xxh"
                android:layout_width="@dimen/dimen_300"
                android:layout_height="@dimen/dimen_200"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_xxh_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:textSize="@dimen/dimen_18" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>