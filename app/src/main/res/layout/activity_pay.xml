<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_wxpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="wxpay"
        android:text="微信支付"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="alipay"
        android:text="支付宝支付"
        app:layout_constraintTop_toBottomOf="@+id/btn_wxpay" />

    <Button
        android:id="@+id/btn_jdpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="jdpay"
        android:text="京东支付"
        app:layout_constraintTop_toBottomOf="@+id/btn_alipay" />

</androidx.constraintlayout.widget.ConstraintLayout>