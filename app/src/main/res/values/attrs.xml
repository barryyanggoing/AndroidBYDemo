<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomView">
        <attr name="default_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="VolumeView">
        <attr name="volume_view_color" format="color" />
        <attr name="volume_view_radius" format="dimension" />
        <attr name="volume_view_maxHeight" format="dimension" />
        <attr name="volume_view_minHeight" format="dimension" />
        <attr name="volume_view_rectWidth" format="dimension" />
        <attr name="volume_view_delayTime" format="integer" />
        <attr name="volume_view_startTime" format="integer" />
        <attr name="volume_view_randomTime" format="integer" />
    </declare-styleable>

        <declare-styleable name="MarqueeText">
            <attr name="scroll_interval" format="integer" />
            <attr name="scroll_first_delay" format="integer"/>
            <attr name="scroll_mode">
                <enum name="mode_forever" value="100"/>
                <enum name="mode_once" value="101"/>
            </attr>
        </declare-styleable>

</resources>